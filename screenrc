#global
altscreen on
autodetach on
startup_message off

# no annoying audible bell, please
vbell off

# Change default scrollback value for new windows
defscrollback 10000

#Caption
caption always "%{Yb} %02d-%02m-%Y %0c %{k}|%{C} %H %{k}|%{G} %l %{k}|%{W} %-Lw%{R}%n %t%{W}%+Lw"

# Term :
screen -t bash 0
screen -t bash 1
